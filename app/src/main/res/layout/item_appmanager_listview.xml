<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip">

	<ImageView
		android:id="@+id/iv_appmanager_listview_item_icon"
		android:layout_width="45dip"
		android:layout_height="45dip"
		android:src="@drawable/app"/>

	<TextView
		android:id="@+id/tv_appmanager_listview_item_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_toRightOf="@id/iv_appmanager_listview_item_icon"
		android:text="计算器"/>

	<TextView
		android:id="@+id/tv_appmanager_listview_item_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@id/tv_appmanager_listview_item_title"
		android:layout_below="@id/tv_appmanager_listview_item_title"
		android:layout_marginLeft="5dip"
		android:text="位置"/>

	<TextView
		android:id="@+id/tv_appmanager_listview_item_size"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:text="大小"/>

</RelativeLayout>