<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<TextView
		style="@style/tv_title"
		android:text="手机防盗界面"/>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/tv_lostfind_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:text="防盗保护开启状态:"
			android:textSize="20sp"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="@android:dimen/app_icon_size"
			android:layout_toRightOf="@id/tv_lostfind_status"
			android:src="@drawable/lock"/>

	</RelativeLayout>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10sp"
		android:drawableLeft="@android:drawable/btn_star_big_on"
		android:gravity="center_vertical"
		android:text="Sim卡变更报警"
		android:textSize="18sp"/>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@android:drawable/btn_star_big_on"
		android:gravity="center_vertical"
		android:text="GPS追踪:#*gps*#"
		android:textSize="18sp"/>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@android:drawable/btn_star_big_on"
		android:gravity="center_vertical"
		android:text="远程清除数据:#*wipedata*#"
		android:textSize="18sp"/>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@android:drawable/btn_star_big_on"
		android:gravity="center_vertical"
		android:text="远程锁屏:#*lockscreen*#"
		android:textSize="18sp"/>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@android:drawable/btn_star_big_on"
		android:gravity="center_vertical"
		android:text="播放报警音乐:#*music*#"
		android:textSize="18sp"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<Button
			android:id="@+id/bt_lostfind_reset"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="@drawable/bt_selector"
			android:text="重新设置"
			android:textColor="@android:color/tertiary_text_dark"
			android:textSize="25dp"/>

	</RelativeLayout>


</LinearLayout>